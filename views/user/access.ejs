  <body>
    <nav class="navbar">
        <div class="container">

                <!-- Logo -->
                <div class="col-12 text-center">
                      <a class="navbar-brand" href=""><img class="logo" src="images/logo.png"></a>
                </div>
        </div>
    </nav>

<div class="access-bar">
    <div class="container">
            <div class="row">
                <div class="col-md-6 heading-content">
                    <div>
                        <h2 class="heading-title">Wosiwosi Investment</h2>
                        <p class="heading-description">An exclusive arm's length investment opportunity for our forward-thinking Wosiwosi customers, friends, family and staffs who shares our belief in the future of Wosiwosi Foods Limited.</p>
                    </div>
                    <div class="interest-form">
                        <!-- <h5>Access code</h5> -->
                        <p>You need an code to view the contents of this platform,  don't have a code? kindly <a class="heading-contact" href="tel:+447946099030">click here to call us</a></p>
                        <form action="/checkaccess" method="post">
                            <div class="form-floating mb-2">
                                <input type="email" name="email" class="form-control emailField" id="floatingInput" placeholder="name@example.com" required ="off">
                                <label for="floatingInput">Enter email</label>
                            </div>

                            <div class="form-floating mb-2">
                                <input type="text" name="phone" class="form-control accessField" id="floatingInput" placeholder="name@example.com" maxlength="13" required autocomplete="off">
                                <label for="floatingInput">Phone number</label>
                            </div>

                            <div class="form-floating mb-2">
                                <input type="text" name="code" class="form-control accessField" id="floatingInput" placeholder="name@example.com" maxlength="8" required autocomplete="off">
                                <label for="floatingInput">Enter access code</label>
                            </div>
                            <%if(status == false){%>
                                <p id="error" class="alert alert-danger"><%= message %></p>
                            <%}%>
                              <button type="submit" id="verify" class="btn btn-success btn-md">Verify</button>
                        </form>
                    </div>
            </div>

            <div class="col-md-6">
                <div class="heading-image-bar text-center">
                    <img class="heading-image" src="images/container-min.jpg">
                </div>
            </div>
        </div>
    </div>
</div>

