<%- include('include/userHeader') -%>

<div class="main-dashboard">
  <div class="container">
    <div class="user-details">
        <div class=" text-center">
            <a class="btn btn-outline-secondary btn-sm" href="/udashboard"><i class="fa-solid fa-arrow-left fa-md"></i> Back to dashboard</a>
        </div>
    </div>

  <div class="row subscriber-row d-flex justify-content-center">
    <p class="text-center"><%=user.profile.fname%>'s investment(s)</p>
      <!-- subscribers -->
      <% for (i=user.investment.length-1; i>=0; i--){%>
        <div class="col-md-4 subscriber-bar">
              <div class="card">
                    <%if(user.investment[i].status == true) {%> 
                        <div class="card-header alert alert-success">
                            <h6 class="minor-info">ID: <%=user.investment[i].id%></h6>
                            <h6 class="">Status: Active</h6> 
                        </div>
                    <%}else{%>
                        <div class="card-header alert alert-secondary">
                            <h6 class="minor-info">ID: <%=user.investment[i].id%></h6>
                            <h6 class="">Status: Inactive</h6> 
                        </div>
                    <%}%> 
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Certificate No.: <span class="main-info"><%=user.investment[i].certificateNo%></span></li>
                    <li class="list-group-item">Principal: <span class="main-info">£<%=user.investment[i].amount%></span></li>
                    <li class="list-group-item">ROI %: <span class="main-info"><%=user.investment[i].roiOption%>%</span></li>
                    <li class="list-group-item">ROI Frequency: <span class="main-info"><%=user.investment[i].roiTime%></span></li>
                  <li class="list-group-item">Expected ROI: <span class="main-info">£<%=user.investment[i].interest%></span></li>
                  <li class="list-group-item">ROI Received: <span class="main-info"><%=user.investment[i].payout%></span></li>
                  <%if(user.investment[i].roiTime == "Monthly"){%>
                    <li class="list-group-item"> ROI Payday: <span class="main-info"><%=user.investment[i].payOutDay%>th of every month</span></li>
                  <%}%>
                  <li class="list-group-item">Investment start date: <span class="main-info"><%=user.investment[i].startDate%></li>
                  <li class="list-group-item">Investment end date: <span class="main-info"><%=user.investment[i].endDate%></li>
                </ul>
                <div class="card-body">
                  <%if(user.investment[i].roiTime == "Monthly"){%>
                    <p class="alert alert-warning">We'll send payout automatically, you won't be able to reinvest on monthly subscription</p>
                  <%}else{%>
                    <button class="btn btn-sm btn-outline-secondary" disabled>Reinvest</button>
                    <%}%>
                    <button class="btn btn-sm btn-outline-secondary" disabled>Quit Investment</button>
                </div>
              </div>
          </div>
    <%}%>
  </div>

  </div>
</div>
<%-include('include/userFooter') -%>
<%-include('include/footer') -%>
